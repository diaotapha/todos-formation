<div class="row">
    <div class="col-6 offset-3 mt-5">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-center">Inscription</h5>
                <%= form_for @user, url: users_path(), method: :post do |f| %>
                    <div class="mb-3">
                        <label class="form-label">Nom<sup class="text-danger">*</sup></label>
                        <%= f.text_field :last_name, class: 'form-control', required: true %>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Prénom<sup class="text-danger">*</sup></label>
                        <%= f.text_field :first_name, class: 'form-control', required: true %>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Addresse email<sup class="text-danger">*</sup></label>
                        <%= f.email_field :email, class: 'form-control', required: true %>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Mot de passe<sup class="text-danger">*</sup></label>
                        <%= f.password_field :password, class: 'form-control', required: true %>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Mot de passe de confirmation<sup class="text-danger">*</sup></label>
                        <%= f.password_field :password_confimation, class: 'form-control', required: true %>
                    </div>
                    <%= f.button "S'inscrire", class: 'btn btn-primary' %>
                <% end %>

                <p class="text-end">Vous avez déjà un compte? <%= link_to "Se connecter", new_session_user_path() %></p>

            </div>
        </div>
    </div>
</div>